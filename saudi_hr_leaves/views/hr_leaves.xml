        <record id="leave_automatic_allocation_form" model="ir.ui.view">
            <field name="name">leave.automatic.allocation.form</field>
            <field name="model">leave.automatic.allocation</field>
            <field name="arch" type="xml">
                <form string="Leave Automatic Allocation">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"
                                groups="hr.group_hr_manager"
                                attrs="{'invisible': ['|',('create_date', '=', False),('state', '!=', 'New')]}"/>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box" groups="hr.group_hr_user">
                            <button type="object" name="open_allocations" class="oe_inline oe_stat_button"
                                    icon="fa-arrow-up">
                                <field name="count_allocations" widget="statinfo" string="Leave Allocations"/>
                            </button>
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="create_date" readonly="1"/>
                            <field name="allocate_till_date"/>
                            <field name="leave_type" required="1"/>
                            <field name="create_uid" readonly="1" groups="hr.group_hr_user"/>
                            <field name="confirm_uid" groups="hr.group_hr_user"/>
                        </group>
                        <notebook>
                            <page string="Leave Allocations">
                                <group string="Leave Allocations">
                                    <field name="allocation_ids" nolabel="1"
                                           context="{'form_view_ref':'hr_holidays.edit_holiday_new'}" readonly="1"/>
                                </group>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="leave_automatic_allocation_tree" model="ir.ui.view">
            <field name="name">leave.automatic.allocation.tree</field>
            <field name="model">leave.automatic.allocation</field>
            <field name="arch" type="xml">
                <tree string="Leave Automatic Allocation">
                    <field name="name"/>
                    <field name="create_date" readonly="1"/>
                    <field name="allocate_till_date"/>
                    <field name="count_allocations"/>
                    <field name="create_uid" readonly="1"/>
                    <field name="confirm_uid"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_leave_automatic_allocation" model="ir.actions.act_window">
            <field name="name">Leave Automatic Allocation</field>
            <field name="res_model">leave.automatic.allocation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_automatic_allocation" name="Leave Automatic Allocation"
                  parent="saudi_hr_leaves.leaves_config_menu" sequence="10" action="action_leave_automatic_allocation"/>

        <record id="hr_holidays.act_hr_employee_holiday_request" model="ir.actions.act_window">
            <field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id,
                'search_default_group_type': 1}
            </field>
        </record>

        <record id="view_holiday_status_normal_tree_custom" model="ir.ui.view">
            <field name="name">hr.leave.type.normal.tree.custom</field>
            <field name="model">hr.leave.type</field>
            <field name="inherit_id" ref="hr_holidays.view_holiday_status_normal_tree"/>
            <field name="arch" type="xml">
                <tree position="replace">
                    <tree string="Leave Type">
                        <field name="name"/>
                        <field name="type"/>
                        <field name="non_annual_type"/>
                        <field name="nationality"/>
                        <field name="can_request_air_ticket"/>
                        <field name="reconciliation_method"/>
                        <field name="state"/>
                    </tree>
                </tree>
            </field>
        </record>
        <record id="hr_holidays.open_view_holiday_status" model="ir.actions.act_window">
            <field name="context">
                { }
            </field>
        </record>


