        <record id="custom_leave_type_form" model="ir.ui.view">
            <field name="name">custom.leave.type.form</field>
            <field name="model">hr.leave.type</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
            <field name="arch" type="xml">
                <form position="replace">
                    <form string="Leave Type">
                        <header>
                            <button name="action_hr_approve" string="Hr Department Approve" type="object"
                                    class="oe_highlight" groups="hr.group_hr_manager"
                                    attrs="{'invisible': ['|',('create_date', '=', False),('state', '!=', 'New')]}"
                                    confirm="Are you sure that you want to approve this policy?"/>
                            <button name="action_set_to_new" string="Set To New" type="object" class="oe_highlight"
                                    groups="hr.group_hr_manager"
                                    states="Approved"
                                    confirm="Are you sure that you want to set this leave type to new?"/>
                            <field name="state" widget="statusbar" readonly="1"/>
                        </header>
                        <sheet>
                            <group>
                                <group name="selection">
                                    <field name="name" attrs="{'readonly':[('state', '!=', 'New')]}"/>
                                    <field name="double_validation" invisible="1"
                                           attrs="{'readonly':[('state', '!=', 'New')]}" groups="hr.group_hr_user"/>
                                    <field name="limit"
                                           attrs="{'invisible':[('type', '=', 'Annual Leave')],'readonly':['|' ,('state', '!=', 'New'),('non_annual_frequency', '=', 'per_request')]}"
                                           groups="hr.group_hr_user"/>
                                    <label for="days_per_leave" groups="hr.group_hr_user"/>
                                    <div>
                                        <field name="days_per_leave" class="oe_inline" groups="hr.group_hr_user"
                                               attrs="{'readonly':[('state', '!=', 'New')]}"/>
                                        Days
                                    </div>
                                    <field name="type" attrs="{'readonly':[('state', '!=', 'New')]}"/>
                                    <field name="non_annual_type"
                                           attrs="{'invisible':[('type', '!=', 'Non Annual Leave')],'required':[('type', '=', 'Non Annual Leave')]}"
                                           groups="hr.group_hr_user"/>
                                    <field name="sick_message"
                                           attrs="{'invisible':[('non_annual_type', '!=', 'Sick Leave')]}"
                                           groups="hr.group_hr_user"/>
                                    <field name="non_annual_frequency"
                                           attrs="{'invisible':[('type', '!=', 'Non Annual Leave')],'required':[('type', '=', 'Non Annual Leave')]}"
                                           groups="hr.group_hr_user"/>
                                    <field name="divide_leave_balance"
                                           attrs="{'invisible':[('type', '!=', 'Non Annual Leave')],'required':[('type', '=', 'Non Annual Leave')]}"
                                           groups="hr.group_hr_user"/>
                                    <field name="who_request"
                                           attrs="{'invisible':[('type', '!=', 'Non Annual Leave')],'required':[('type', '=', 'Non Annual Leave')],'readonly':[('non_annual_type', 'in', ['New Baby For Men','New Baby For Women','Husband Death'])]}"
                                           groups="hr.group_hr_user"/>
                                    <field name="marital_status"
                                           attrs="{'invisible':[('type', '!=', 'Non Annual Leave')],'required':[('type', '=', 'Non Annual Leave')],'readonly':[('non_annual_type', 'in', ['New Baby For Men','Marriage Leave','New Baby For Women','Husband Death'])]}"
                                           groups="hr.group_hr_user"/>
                                    <field name="religion"
                                           attrs="{'invisible':[('type', '!=', 'Non Annual Leave')],'required':[('type', '=', 'Non Annual Leave')]}"
                                           groups="hr.group_hr_user"/>
                                    <field name="days_in_month" attrs="{'invisible':[('type', '!=', 'Annual Leave')],
                                            'required': [('type', '!=', 'Annual Leave')],'readonly':[('state', '!=', 'New')]}"
                                           groups="base.group_no_one"/>
                                    <field name="months_in_year" attrs="{'invisible':[('type', '!=', 'Annual Leave')],
                                            'required': [('type', '!=', 'Annual Leave')],'readonly':[('state', '!=', 'New')]}"
                                           groups="base.group_no_one"/>
                                    <field name="days_in_year" attrs="{'invisible':[('type', '!=', 'Annual Leave')]}"
                                           groups="base.group_no_one"/>
                                    <field name="number_of_days"
                                           attrs="{'invisible':['|' ,('type', '!=', 'Non Annual Leave'),('limit', '=', True)]}"/>
                                    <field name="nationality" attrs="{'readonly':[('state', '!=', 'New')]}"
                                           groups="hr.group_hr_user"/>
                                    <field name="can_request_air_ticket" required="1" groups="hr.group_hr_user"/>
                                    <field name="reconciliation_based_on" attrs="{'invisible':[['type','!=','Annual Leave']],
                                        'required':[['type','=','Annual Leave']]}" groups="hr.group_hr_user"/>
                                    <field name="mandatory_return_from_leave"
                                           attrs="{'readonly':[('state', '!=', 'New')]}"/>
                                </group>
                                <group name="second" groups="hr.group_hr_user">
                                    <field name="categ_id" attrs="{'readonly':[('state', '!=', 'New')]}"/>
                                    <field name="color_name" attrs="{'readonly':[('state', '!=', 'New')]}"/>
                                    <field name="active" attrs="{'readonly':[('state', '!=', 'New')]}"/>
                                    <field name="company_id" groups="base.group_multi_company"
                                           attrs="{'readonly':[('state', '!=', 'New')]}"/>
                                    <field name="start_calc_from" attrs="{'invisible':[('type', '!=', 'Annual Leave')],
                                        'required': [('type', '!=', 'Annual Leave')],'readonly':[('state', '!=', 'New')]}"/>
                                    <field name="allow_leave_advance"
                                           attrs="{'readonly':[('state', '!=', 'New')],'invisible':[('type', '!=', 'Annual Leave')]}"/>
                                    <field name="max_advance_type"
                                           attrs="{'required':[('allow_leave_advance', '=', True)],'invisible':[('allow_leave_advance', '!=', True)]}"/>
                                    <field name="advance_days"
                                           attrs="{'invisible':[('max_advance_type', '!=', 'fixed')]}"/>

                                    <!--                                    <field name="start_allocation_after" attrs="{'readonly':[('state', '!=', 'New')]}" />-->
                                    <label for="max_balance" attrs="{'invisible':[('type', '!=', 'Annual Leave')]}"/>
                                    <div attrs="{'invisible':[('type', '!=', 'Annual Leave')]}">
                                        <field name="max_balance" class="oe_inline"
                                               attrs="{'readonly':[('state', '!=', 'New')]}"/>
                                        Days
                                    </div>
                                    <field name="create_date" invisible="1"/>
                                    <field name="reconciliation_method" required="1"
                                           attrs="{'readonly': [('non_annual_type', 'in', ['Unpaid Leave','Sick Leave'])]}"/>
                                    <label for="leave_reconciliation_minimum"
                                           attrs="{'invisible':['|',('type', '!=', 'Annual Leave'),('reconciliation_method', '!=', 'Stop payslip during leave and use leave reconciliation')]}"
                                           groups="hr.group_hr_user"/>
                                    <div attrs="{'invisible':['|',('type', '!=', 'Annual Leave'),('reconciliation_method', '!=', 'Stop payslip during leave and use leave reconciliation')]}"
                                         groups="hr.group_hr_user">
                                        <field name="leave_reconciliation_minimum" class="oe_inline"
                                               attrs="{'readonly':[('state', '!=', 'New')]}"/>
                                        Days
                                    </div>
                                    <field name="working_calendar" required="1"
                                           attrs="{'readonly':[('state', '!=', 'New')]}"/>
                                </group>
                                <group string="Alternative Employee">
                                    <field name="alternative_employee"/>
                                    <field name="is_alternative_employee"
                                           attrs="{'invisible':[('alternative_employee', '=', False)], 'readonly':[('state', '!=', 'New')]}"/>
                                    <field name="alternative_employee_days"
                                           attrs="{'invisible':[('is_alternative_employee', '=', False)], 'readonly':[('state', '!=', 'New')]}"/>
                                    <field name="alternative_approval"
                                           attrs="{'invisible':[('is_alternative_employee', '=', False)],  'readonly':[('state', '!=', 'New')]}"/>
                                </group>
                            </group>
                            <notebook groups="hr.group_hr_user">
                                <page name="calculation_method" string="Calculation Method">
                                    <field name="max_line_less" groups="base.group_no_one"/>
                                    <group string="Calculation In Months"
                                           attrs="{'invisible':['|',('type', '!=', 'Annual Leave'),('create_date', '=', False)]}">
                                        <field name="lines" nolabel="1" attrs="{'readonly':[('state', '!=', 'New')]}"
                                               context="{'leave_type_id': active_id}">
                                            <tree editable="bottom">
                                                <field name="greater_than" string="Greater Than (In Months)"/>
                                                <field name="less_than" string="Less than (in months)"/>
                                                <field name="number_of_months"/>
                                                <field name="calc_method"/>
                                                <field name="balance"
                                                       attrs="{'readonly':[('calc_method', '=', 'None')]}"/>
                                                <field name="monthly_balance"/>
                                                <field name="notes"/>
                                                <field name="create_date" invisible="1"/>
                                            </tree>
                                        </field>
                                    </group>
                                </page>
                                <page name="condition" string="Notes">
                                    <field name="notes"/>
                                    <field name="create_date" invisible="1"/>
                                </page>
                            </notebook>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </form>
                </form>
            </field>
        </record>

