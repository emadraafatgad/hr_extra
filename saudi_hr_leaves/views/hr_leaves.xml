<odoo>
    <data>
        <!--Effective notice-->
        <record id="action_effective_notice" model="ir.actions.act_window">
            <field name="name">Return from leave</field>
            <field name="res_model">effective.notice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_return_from_leave':1,
                'default_type': 'Return From Leave',}
            </field>
        </record>
        <menuitem id="menu_effective_notice" name="Return from leave" groups="hr.group_hr_user"
                  parent="hr_holidays.menu_hr_holidays_my_leaves" sequence="18" action="action_effective_notice"/>

        <record id="view_effective_notice_search" model="ir.ui.view">
            <field name="name">hr_leaves_search</field>
            <field name="model">effective.notice</field>
            <field name="arch" type="xml">
                <search string="effective notice">
                    <field name="name"/>
                    <field name="desc"/>
                    <field name="employee_id"/>
                    <filter name="new_employee" string="New Employee" domain="[('type', '=', 'New Employee')]"/>
                    <filter name="return_from_leave" string="Return From Leave"
                            domain="[('type', '=', 'Return From Leave')]"/>
                    <group>
                        <filter string="Branch" name="branch_id" context="{'group_by':'branch_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="view_employee_form_effective_notices" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority" eval="18"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_inline oe_stat_button" name="action_effective_notices" type="object"
                            icon="fa-star">
                        <field string="Effective Notices" name="effective_count" widget="statinfo"/>
                    </button>
                </div>
                <xpath expr="//group[@name='active_group']/../.." position="before">
                    <page string="Leaves" groups="hr.group_hr_user">
                        <group groups="hr.group_hr_user">
                            <group>
                                <field name="start_allocation_date"/>
                                <field name="start_working_date"/>
                            </group>
                        </group>
                        <label for="non_annual_leave_balance" groups="hr.group_hr_user"/>
                        <field name="non_annual_leave_balance" readonly="1" groups="hr.group_hr_user">
                            <tree>
                                <field name="holidays_status_id"/>
                                <field name="non_annual_frequency"/>
                                <field name="total_allocated_days"/>
                                <field name="total_requested_days"/>
                                <field name="net_balance"/>
                                <field name="last_leave_request"/>
                                <field name="leave_request_date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="effective_notice_leave_inhierit" model="ir.ui.view">
            <field name="name">effective.notice.form</field>
            <field name="model">effective.notice</field>
            <field name="inherit_id" ref="saudi_hr_employee.effective_notice_form"/>
            <field name="arch" type="xml">
                <field name="payslip_date" position="after">
                    <field name="leave_request_id"
                           attrs="{'invisible':[('type', '!=', 'Return From Leave')],'required':[('type', '=', 'Return From Leave')]}"
                           options="{'no_create': True}" context="{ }"
                           domain="[('employee_id', '=',employee_id),('state','=','validate'),('return_from_leave','=',False),('leave_extended','=',False)]"/>
                    <label for="leave_start_date" attrs="{'invisible':[('type', '!=', 'Return From Leave')]}"/>
                    <div attrs="{'invisible':[('type', '!=', 'Return From Leave')]}">
                        <field name="leave_start_date" class="oe_inline" widget="date"/>
                        ==
                        <field name="leave_start_date_day" readonly="1" class="oe_inline"/>
                    </div>
                    <label for="leave_end_date"
                           attrs="{'invisible':[('type', '!=', 'Return From Leave')]}"/>
                    <div attrs="{'invisible':[('type', '!=', 'Return From Leave')]}">
                        <field name="leave_end_date" class="oe_inline" widget="date"/>
                        ==
                        <field name="leave_end_date_day" readonly="1" class="oe_inline"/>
                    </div>
                    <label for="expected_working_day"
                           attrs="{'invisible':[('type', '!=', 'Return From Leave')]}"/>
                    <div attrs="{'invisible':[('type', '!=', 'Return From Leave')]}">
                        <field name="expected_working_day" class="oe_inline"/>
                        ==
                        <field name="expected_working_week_day" readonly="1" class="oe_inline"/>
                    </div>


                </field>
            </field>
        </record>
        <!--End Effective notice-->
        <record model="ir.ui.menu" id="hr_holidays.menu_hr_holidays_configuration">
            <field name="name">‫‪Leave‬‬s ‫‪Types</field>
