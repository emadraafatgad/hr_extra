                                        <td class="table_cell  rtl gray">
                                            الوظيفة
                                        </td>
                                    </tr>
                                    <tr  >
                                        <td class="table_cell gray" >
                                            Branch
                                        </td>
                                        <td class="table_cell" >
                                            <span t-field="o.employee_id.branch_id.name"/>
