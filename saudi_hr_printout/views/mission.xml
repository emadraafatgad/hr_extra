                                        <td class="table_cell" colspan="2">
                                            <span t-field="o.employee_id.name"/>
                                        </td>
                                        <td class="table_cell rtl gray">
                                            اسم الموظف
                                        </td>
                                    </tr>
                                    <tr  >
                                        <td class="table_cell gray" >
                                            Department
                                        </td>
                                        <td class="table_cell" >
                                            <span t-field="o.employee_id.department_id.name"/>
                                        </td>
                                        <td class="table_cell  rtl gray">
                                            الادارة
                                        </td>
                                        <td class="table_cell gray" >
                                            Position
                                        </td>
                                        <td class="table_cell" >
                                            <span t-field="o.employee_id.job_id.name"/>
