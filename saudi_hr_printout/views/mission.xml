                                                </div>
                                                <div class="col-xs-6 text-right rtl">
                                                    مبررات طلب الخروج
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="table_cell" height="40px">
                                            <span t-field="o.name" />
                                        </td>
                                    </tr>
                                </tbody>
